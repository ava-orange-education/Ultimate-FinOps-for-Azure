"policyRule": {
    "if": {
      "allOf": [
        {
          "field": "type",
          "equals": "Microsoft.Compute/disks"
        },
        {
          "not": {
            "anyOf": [
              {
                "field": "Microsoft.Compute/disks/diskState",
                "equals": "Attached"
              },
              {
                "field": "Microsoft.Compute/disks/diskState",
                "equals": "Reserved"
              }
            ]
          } 
        }
      ]
    },
    "then": {
      "effect": "audit"
    }
  }
